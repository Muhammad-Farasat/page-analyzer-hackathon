{
  "manifest_version": 3,
  "name": "Page Analyzer",
  "version": "1.0",
  "description": "Analyze webpages using AI",
  "permissions": [
    "scripting",
    "activeTab",
    "storage" 
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.groq.com/" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_2.png",
      "48": "icons/icon_2.png",
      "128": "icons/icon_2.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}